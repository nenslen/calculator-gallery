<div class="calc-section calc-inputs">
	<span class="calc-input">
	    <span class="calc-input-title">{{ calc.inputs.x.name }}</span>
	    <input type="number" ng-change="calc.calculate()" ng-model="calc.inputs.x.value" class="{{ calc.colorTheme.inputColor }}-input" placeholder="{{ calc.inputs.x.hint }}">
	</span>
</div>

<div class="calc-section calc-outputs">
	<span class="calc-output">
	    <span class="calc-output-title">{{ calc.outputs.y.name }}</span>
	    <input type="number" ng-model="calc.outputs.y.value" class="{{ calc.colorTheme.outputColor }}-disabled" readonly>
	</span>
</div>


<div id="square-info" ng-hide="true">
    <div class="modal-body-section">
        <span class="modal-description-title">General</span>
        <p>To square a number, we multiply it by itself.</p>
    </div>
</div>

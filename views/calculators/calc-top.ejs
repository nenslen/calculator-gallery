<div class="calc-section calc-top">
	<span class="calc-title">{{ calc.title }}</span>
	<span class="calc-hr"></span>

	<span class="calc-preferences">
		<span class="calc-icon" id="settings-icon">
			<i class="fas fa-cog fa-lg"></i>
		</span>
		<span class="calc-icon" id="info-icon">
			<i class="fas fa-info-circle fa-lg"></i>
		</span>
		<span class="calc-icon">
			<% if(favorited) { %>
				<form action="/favorites/delete" method="POST">
			        <input type="hidden" name="calculator" value="{{ calc.name }}">
			        <span class="calc-icon" id="favorite-icon">
			        	<i class="fas fa-star fa-lg" onclick="this.parentNode.submit()"></i>
			        </span>
			    </form>
			<% } else { %>
				<form action="/favorites/add" method="POST">
			        <input type="hidden" name="calculator" value="{{ calc.name }}">
			        <span class="calc-icon" id="favorite-icon">
			        	<i class="far fa-star fa-lg" onclick="this.parentNode.submit()"></i>
			        </span>
			    </form>
			<% } %>
		</span>
	</span>
</div>

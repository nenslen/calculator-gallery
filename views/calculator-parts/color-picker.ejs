<span class="modal-section-title">Color theme</span>

<select
	ng-model="currentCalc.colorTheme"
	ng-options="color.name for color in colorThemes track by color.id"
	ng-change="changeColorTheme(currentCalc.colorTheme)"
	id="color-picker" class="{{ currentCalc.colorTheme.inputColor }}-disabled }}">
</select>

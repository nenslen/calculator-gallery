<div class="calculator {{ calc.colorTheme.backgroundColor }}-background">
	<div class="calculator-inner">
		<%- include('calculator-top'); %>

		<div class="calculator-inputs">
			<span class="calculator-input">
			    <span class="calculator-input-title">{{ calc.inputs.x.name }}</span>
			    <input type="number" ng-change="calculate()" ng-model="calc.inputs.x.value" class="{{ calc.colorTheme.inputColor }}">
			</span>
		</div>

		<div class="calculator-outputs">
			<span class="calculator-output">
			    <span class="calculator-output-title">{{ calc.outputs.y.name }}</span>
			    <input type="number" ng-model="calc.outputs.y.value" class="{{ calc.colorTheme.outputColor }}-disabled" readonly>
			</span>
		</div>

		<%- include('errors'); %>
		<%- include('reset-button'); %>
		<%- //include('favorite-button', {favorited: favorited, calcName: 'square'}); %>
		<%- //include('color-picker'); %>
	</div>
</div>
